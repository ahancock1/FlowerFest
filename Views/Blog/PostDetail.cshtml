@model PostDetailViewModel

<!-- Page Intro -->
<section id="inner-intro" class="inner-intro bg-image overlay-dark20 jarallax">
    <div class="container">
        <div class="intro-content">
            <div class="intro-content-inner">
                <h1 class="">@Model.Title</h1>
                <h5 class="alt-title intro-sub-title">@Model.Description</h5>
                
                <a class="btn btn-black-outline btn-lg" asp-controller="Blog" asp-action="Edit" asp-route-id="@Model.Id">Edit Post</a>
            </div>
        </div>
    </div>
</section>
<!-- End Page Intro -->

<!-- Blog Section -->
<section class="section-padding">
    <!-- Post Single -->
    <div class="container">
        <div class="row">
            <!--Post Col-->
            <div class="col-md-8 offset-md-2">
                <!-- Post -->
                <div class="blog-post">

                    <div class="post-entry">
                        @Html.Raw(PostHelper.CompileContent(Model))
                    </div>
                    <div class="post-tag">

                        @foreach (var category in Model.Categories)
                        {
                            <span>
                                <a asp-controller="Blog" asp-action="Category" asp-route-category="@category.ToLowerInvariant()">
                                    @category
                                </a>
                            </span>
                        }
                    </div>

                    <br/>

                    <div class="post-meta">
                        <span>by <a>John Doe</a>,</span>
                        <span class="post-date">06 Jan 2016</span>
                    </div>

                    <br/>


                    @{
                        //await Html.RenderPartialAsync("_SocialSharing", Model.Title);
                        await Html.RenderPartialAsync("Comments");
                    }


                </div>

                <!-- End Post -->


            </div>


        </div>
    </div>
    <!-- End Post Single-->


</section>
<!-- End Blog Section -->
