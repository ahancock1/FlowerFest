@model NewsViewModel

<div class="container">

    <h1 class="mb-60 text-center">Our Latest News</h1>
    
    <div class="row">

        @foreach (var post in Model.RecentPosts)
        {
            <div class="col-md-4 col-sm-6 mb-sm-30 wow fadeIn" data-wow-duration="2s" data-wow-delay="0.1s">
                <!-- Post -->
                <div class="blog-post">
                    <div class="post-media">
                        @*<img src="img/blog/01.jpg" alt="blog" />*@
                    </div>
                    <div class="post-meta">
                        <span>by <a>@post.Author</a>,</span>
                        <span class="post-date">
                            @post.Published.ToString("dd MMM yyyy")
                        </span>
                    </div>
                    <div class="post-header">
                        <h4 class="alt-title">
                            <a href="">
                                @post.Title
                            </a>
                        </h4>
                    </div>
                    <div class="post-tag">
                        
                        @foreach (var category in post.Categories)
                        {
                            <span>
                                <a href="#">
                                    @category
                                </a>
                            </span>
                        }
                    </div>
                </div>
                <!-- End Post -->
            </div>
        }
        
    </div>

    <div class="rows text-center mt-60">
        <a href="#" class="link">View All Blog <i class="fa fa-angle-right right"></i></a>
    </div>

</div>