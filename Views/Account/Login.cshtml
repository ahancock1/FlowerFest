@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["Description"] = $"Login";
}

@section head {
    <link rel="stylesheet" href="/css/login.scss"/>
}

<div id="login">
    
    <h2>@ViewData["Description"]</h2>

    <form method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">

        <fieldset>
            <div class="row">
                <div class="standard-control col-md-12">
                    <div class="control">
                        <input class="form-control" asp-for="UserName" aria-label="UserName" autofocus placeholder="Username" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="standard-control col-md-12">
                    <div class="control">
                        <input class="form-control" asp-for="Password" aria-label="Password" autofocus placeholder="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
            </div>
            
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe">Remember me</label>

            <div class="actions">
                <input class="submit col-md-4 col-md-offset-4" type="submit" value="Sign in"/>
            </div>
        </fieldset>
    </form>
</div>