@model LoginViewModel

    <section id="login" class="section-padding">
        <div class="container text-center">

            <h1>Login</h1>

            <div class="row">

                <div class="col-md-8 offset-md-2">

                    <h2>@ViewData["Description"]</h2>

                    <form method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">

                        <div class="col-md-12">
                            <div class="form-field-wrapper">
                                <input class="input-lg form-full input-fancy"
                                       type="text" asp-for="UserName" autofocus
                                       placeholder="Username" required />
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-field-wrapper">
                                <input class="input-lg form-full input-fancy"
                                       type="password" asp-for="Password"
                                       placeholder="Password" required />
                            </div>
                        </div>

                        <div class="col-md-12">
                            <button class="btn-contact-submit btn btn-lg btn-black" type="submit"
                                    id="form-submit" name="submit">
                                Sign In
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </section>