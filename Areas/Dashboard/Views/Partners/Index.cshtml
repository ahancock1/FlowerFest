@model IEnumerable<PartnerViewModel>

@{
    ViewData["Title"] = "Partners";
}

<div class="container">
    <h2>Partners</h2>

    <p>
        <a asp-controller="Partners" asp-action="Create" asp-area="Dashboard">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Link)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <label>@item.Name</label>
                    </td>
                    <td>
                        <label>@item.Link</label>
                    </td>
                    <td>
                        <a asp-area="Dashboard" asp-controller="Partners" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-area="Dashboard" asp-controller="Partners" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>