@model IEnumerable<TestimonialViewModel>

@{
    ViewData["Title"] = "Testimonials";
}

<div class="container-fluid">


    <h2>Testimonials</h2>

    <p>
        <a asp-controller="Testimonials" asp-action="Create" asp-area="Dashboard">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Place)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <label>@item.Id</label>
                    </td>
                    <td>
                        <label>@item.Content</label>
            </td>
            <td>
                <label>@item.Author</label>
            </td>
            <td>
                <label>@item.Place</label>
            </td>
            <td>
                <a asp-area="Dashboard" asp-controller="Testimonials" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-area="Dashboard" asp-controller="Testimonials" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
            }
        </tbody>
    </table>
</div>