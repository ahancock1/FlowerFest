@model IEnumerable<PostViewModel>

@{
    ViewData["Title"] = "Posts";
}

<div class="container">
    <h2>Posts</h2>

    <p>
        <a asp-action="Create" asp-controller="Posts" asp-area="Dashboard">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Slug)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PublishedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <label>@item.Slug</label>
                    </td>
                    <td>
                        <label>@item.Title</label>
                    </td>
                    <td>
                        <label>@item.Description</label>
                    </td>
                    <td>
                        <label>@item.PublishedDate</label>
                    </td>
                    <td>
                        <a asp-area="Dashboard" asp-controller="Posts" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-area="Dashboard" asp-controller="Posts" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>